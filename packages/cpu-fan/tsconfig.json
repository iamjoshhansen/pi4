{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "baseUrl": "./",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@pi4/*": ["../*/src"]
    },
    "types": ["node"]
  },
  "include": ["src"],
  "references": [
    {
      "path": "../gpio/tsconfig.json"
    }
  ]
}
